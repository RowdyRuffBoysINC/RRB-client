{
  "plugins": [
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true,
      "sourceType": "module",
      "impliedStrict": true
    }
  },
  "rules": {
    "no-multiple-empty-lines": [
      1,
      {
        "max": 2,
        "maxEOF": 1
      }
    ],
    "no-useless-constructor": [
      1
    ],
    "no-unused-vars": [
      1
    ],
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      1,
      "single"
    ],
    "semi": [
      1
    ],
    "react/prop-types": [
      0
    ],
    "eqeqeq": [
      1
    ],
    "default-case": [
      1
    ],
    "no-var": [
      2
    ],
    "prefer-const": [
      2
    ],
    "prefer-arrow-callback": [
      1
    ],
    "eol-last": [
      1
    ],
    "key-spacing": [
      1
    ],
    "jsx-quotes": [
      1,
      "prefer-double"
    ],
    "no-unneeded-ternary": [
      1
    ],
    "padded-blocks": [
      1,
      "never"
    ],
    "no-use-before-define": [
      1
    ],
    "no-console": [
      1
    ],
    "no-trailing-spaces": [
      1
    ],
    "dot-notation": [
      1
    ],
    "no-multi-spaces": [
      1
    ],
    "no-useless-return": [
      1
    ],
    "array-bracket-newline": [
      1
    ],
    "array-bracket-spacing": [
      1,
      "always"
    ],
    "capitalized-comments": [
      1
    ],
    "comma-dangle": [
      "error",
      {
        "arrays": "always",
        "objects": "always",
        "imports": "always",
        "exports": "always",
        "functions": "ignore"
      }
    ],
    "no-lonely-if": [
      0
    ],
    "object-curly-newline": [
      1
    ],
    "space-before-blocks": [
      1
    ],
    "arrow-parens": [
      1,
      "as-needed",
      {
        "requireForBlockBody": true
      }
    ],
    "object-shorthand": [
      1
    ],
    "prefer-template": [
      1
    ],
    "template-curly-spacing": [
      1
    ]
  }
}